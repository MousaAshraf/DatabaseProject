[run]
branch = True
source = app
omit =
    */__init__.py
    */tests/*
    */alembic/*
    */migrations/*
    */venv/*
    */.venv/*
    */site-packages/*
    *settings.py

[report]
show_missing = True
skip_covered = True
precision = 2
exclude_lines =
    pragma: no cover
    if __name__ == .__main__.:
    @abstractmethod
    raise NotImplementedError

[html]
directory = htmlcov
title = Cairo Metro Coverage Report
